%header
  - unless current_user
    .dark-header
      %nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
          .row
            .col-md-12
              .not-connected-menu
                .navbar-header.navbar-left
                  = link_to(root_path, class: "navbar-brand hidden-xs") do
                    #diacontents_logo.diaspora_header_logo
                      = image_tag("/diacontents/header-logo.png", class: "img-responsive")
                  .visible-xs-block.header-title
                    = link_to(image_tag("branding/logos/asterisk_white_mobile.png", class: "img-responsive"),
                        root_path, class: "navbar-brand")
                = render "layouts/header_not_connected"
